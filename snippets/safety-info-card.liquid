{% comment %}
  Snippet: einzelne Safety-Box
  Erwartet: block, section
{% endcomment %}

<div class="safety-info-card" {{ block.shopify_attributes }}>
  <div class="safety-info-icon">
    {% if block.settings.icon != blank %}
      <img
        src="{{ block.settings.icon | image_url: width: 60 }}"
        alt="{{ block.settings.title | strip_html | escape }}"
        loading="lazy"
        width="40"
        height="40"
      >
    {% else %}
      <div class="safety-info-icon-placeholder" aria-hidden="true">!</div>
    {% endif %}
  </div>

  <div class="safety-info-content">
    {% if block.settings.title != blank %}
      <div class="safety-info-title rte">
        {{ block.settings.title }}
      </div>
    {% endif %}

    {% if block.settings.text != blank %}
      <div class="safety-info-text rte">
        {{ block.settings.text }}
      </div>
    {% endif %}

    {% if block.settings.show_button and block.settings.button_label != blank %}
      {% if block.settings.button_link != blank %}
        <a href="{{ block.settings.button_link }}" class="safety-info-button">
          {{ block.settings.button_label }}
        </a>
      {% else %}
        <button type="button" class="safety-info-button">
          {{ block.settings.button_label }}
        </button>
      {% endif %}
    {% endif %}
  </div>
</div>
