{% comment %}
  Snippet: einzelne Anwendungsbereich-Karte (Richtext-Titel + Farbanpassung)
{% endcomment %}
<div class="app-area-card" {{ block.shopify_attributes }}>
  <div class="app-area-icon">
    {% if block.settings.icon != blank %}
      <img
        src="{{ block.settings.icon | image_url: width: 80 }}"
        alt="{{ block.settings.title | strip_html | escape }}"
        loading="lazy"
        width="48"
        height="48"
      >
    {% else %}
      <div class="app-area-icon-placeholder" aria-hidden="true">â˜…</div>
    {% endif %}
  </div>

  {% if block.settings.title != blank %}
    <div class="app-area-title rte">
      {{ block.settings.title }}
    </div>
  {% endif %}

  {% if block.settings.text != blank %}
    <div class="app-area-text rte">
      {{ block.settings.text }}
    </div>
  {% endif %}
</div>
